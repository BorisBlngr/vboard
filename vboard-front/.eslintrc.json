{
    "plugins": ["angular"],
    "extends": ["strict", "plugin:angular/johnpapa", "plugin:lodash/canonical"],
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "browser": true
    },
    "rules": {
        // Angular JS
        "angular/controller-as": 0,
        "angular/controller-as-route": 0,
        "angular/controller-as-vm": 0,
        "angular/file-name": 0,
        "angular/no-run-logic": 0,

        // Possible Errors
        "comma-dangle": 0,
        "no-console": 0,
        "no-extra-parens": 0,
        "no-func-assign": 0,
        "no-inner-declarations": 0,
        "no-regex-spaces": 0,
        "no-reserved-keys": 0,
        "valid-jsdoc": 0,

        // Best Practices
        "block-scoped-var": 0,
        "complexity": [2, 8],
        "default-case": 0,
        "dot-notation": 0,
        "guard-for-in": 0,
        "no-caller": 0,
        "no-empty-function": 0,
        "no-extra-bind": 0,
        "no-multi-spaces": 0,
        "no-mixed-operators": 0,
        "no-new": 0,
        "no-process-env": 0,
        "no-warning-comments": 0,
        "prefer-arrow-callback": 0,
        "vars-on-top": 0,
        "yoda": 0,

        // Variables
        "no-catch-shadow": 0,

        // Stylistic Issues
        "array-bracket-newline": 0,
        "array-bracket-spacing": 0,
        "id-blacklist": 0,
        "id-length": [2, {"exceptions": ["$q"]}],
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "consistent-this": 0,
        "eol-last": 0,
        "filenames/match-regex": 0,
        "func-names": 0,
        "func-style": 0,
        "indent": [2, 4],
        "key-spacing": 0,
        "max-nested-callbacks": [2, 3],
        "no-magic-numbers": 0,
        "no-inline-comments": 0,
        "no-lonely-if": 0,
        "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
        "no-multiple-empty-lines": [2, {"max": 2}],
        "line-comment-position": 0,
        "no-ternary": 0,
        "no-trailing-spaces": 0,
        "no-underscore-dangle": 0,
        "one-var": 0,
        "operator-assignment": 0,
        "padded-blocks": 0,
        "quote-props": 0,
        "quotes": 0,
        "semi": 0,
        "sort-vars": 0,
        "space-after-function-name": 0,
        "space-before-function-parentheses": 0,
        "space-in-brackets": 0,
        "space-in-parens": 0,
        "space-infix-ops": 0,
        "spaced-line-comment": 0,

        // Legacy
        "max-depth": [2, 5],
        "max-len": 0,
        "max-params": 0,

        // Lodash
        "lodash/chaining": 0,
        "lodash/prefer-immutable-method": 0,
        "lodash/prefer-lodash-method": 0,
        "lodash/prefer-noop": 0
    },
    "globals": {
        "_": false,
        "$": false,
        "afterEach": false,
        "angular": false,
        "beforeEach": false,
        "browser": false,
        "describe": false,
        "expect": false,
        "imagesLoaded": false,
        "inject": false,
        "it": false,
        "module": false,
        "moment": false,
        "protractor": false,
        "Packery": false,
        "twttr": false
    }
}
